*
  box-sizing border-box

body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-align center
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  font-size 40px
#postsContainer
  padding: 10px
  text-align left
  margin-left auto
  margin-right auto
  max-width 640px
  .postContainer
    width: 100%
    padding 20px
    .created_at
        display none
    .title
        font-weight bold
        text-decoration underline

.article
  .created_at
    display none
  input[type =text]
    width 490px
    margin-left 16px
  input[type =button], input[type =submit]
    text-align left
    margin-left 440px
  textarea
    width 490px
    height 90px